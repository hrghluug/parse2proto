<idea-plugin>
    <id>com.xgh</id>
    <name>parse 2 proto</name>
    <vendor email="2668634668@qq.com" url="http://www.baidu.com">baidu</vendor>

    <description><![CDATA[
    <ul>
        <li>
            将当前java类转化成proto格式
        </li>
        <li>
             Converts the current java class to proto message
        </li>
    </ul>

    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>


    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action class="com.xgh.ParseOneAction" id="ParseOne" text="ParseOne" description="只转换当前文件">
            <add-to-group group-id="EditorPopupMenu" anchor="first"></add-to-group>
        </action>
    </actions>
</idea-plugin>